<%= render "layouts/navbar" %>
Hello, <%=@user[0].email%>

<h1> <%=@user[0].username%>'s Posts</h1>

<%= image_tag @user[0].avatar.url(:thumb) %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Location</th>
      <th>Picture</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>

        <td><%= post.name %></td>
        <td><%= post.description %></td>
        <td><%= post.location %></td>
        <td><%= image_tag post.image.url(:thumb) %></td>
        <td><%= post.user_id %></td>
        <td><%= link_to 'Show', post_path(post.id) %></td>
        <%- if current_user.id === post.user_id %>
        <td><%= link_to 'Edit', edit_post_path(post.id) %></td>
        <td><%= link_to 'Destroy', post_path(post.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
		<% end %>
      </tr>
    <% end %>
  </tbody>
</table>



<br>
