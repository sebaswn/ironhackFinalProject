<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
              <div class="modal-dialog modal-xl inverse" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Title</h4>
                  </div>
                  <div class="modal-body">
                    <div class="row">
                      <div class="col-md-8 pictureView">
                        Goodbye
                      </div>
                      <div class="col-md-4 infoView">
                        Hello
                    </div>
                  </div>
                  
                </div>
              </div>
            </div>



<script>
 $(".showPic").click(function() {
     event.preventDefault();
     var post_id = $(this).data("post");
     console.log(post_id);
     $.ajax({
         url: "/getPostInfo/" + post_id + "",
         success: function(data) {
             $(".modal-title").empty();
             $(".modal-title").append("<h3>" + data.name +
                 "</h3>");
             $(".pictureView").empty();
             $(".pictureView").append(
                 "<img data-postid="+data.id+" class='imageShow' src='/images/original/" +
                 data.image_file_name + "'>");
             $(".infoView").empty();
             $.ajax({
                 url: "/user/" + data.user_id +
                     "/finduser",
                 success: function(data) {
                     $(".infoView").prepend(
                         "<b><h4>Photographer: </b>" +
                         data[0].username +
                         "</h4>");
                 }
             });
             $(".infoView").append(
                 "<b><h4>Description: </b>" + data.description +
                 "")
             $(".infoView").append("<b><h4>Location: </b>" +
                 data.location + "")
             $.ajax({
                 url: "/post/" + data.id + "/likes",
                 success: function(data) {
                     $(".infoView").append(
                         "<b><h4>Likes: </b>" +
                         data.length +
                         "</h4>");
                 }
             });
             $.ajax({
                 url: "/posts/" + data.id +
                     "/comments",
                 success: function(data) {

                     $(".infoView").append(
                         "<div class='comments'> <b><h4>Comments: </b></h4><ul>"
                     );
                     for (i = 0; i < data.length; i++) {
                         $(".comments").append(
                             "<li>" + data[
                                 i].content +
                             "</li>")
                     }
                     $(".infoView").append(
                         "<textarea id='comment' class='comment' rows='3' cols='45px' placeholder='comment' maxlength='140'></textarea>"
                     )
                     $(".infoView").append(
                         "<button data-userid='<%=current_user%>' class='submitComment'>Comment</button>"
                     )
                 }
             });
         },
         error: function() {
             console.log("this is not working")
         }
     })
     $(".active").children('#myModal').focus();
 });
 $("body").on("click", ".submitComment", function() {
     console.log("click")
      comment = document.getElementById("comment").value;
      console.log(comment)
      if (comment != ""){
        $.ajax({
          type: "POST",
          url: "post/comments/create",
          data: {
                user_id: $(this).data("userid"),
                post_id: $('.imageShow').data("postid"),
                content: comment

          },
          success: function(){
            $(".comment").val('');
            $(".comments").append("<li>"+comment+"</li>");
          }
        })
      }

     
 })








</script>


