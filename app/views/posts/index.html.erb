<%= render "layouts/navbar" %>

<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Location</th>
      <th>image</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>

        <td><%= post.name %></td>
        <td><%= post.description %></td>
        <td><%= post.location %></td>
        <td><%= image_tag post.image.url(:thumb) %></td>
        <td><%= post.user_id %></td>
        <td><%= link_to 'Show', post_path(post.id) %></td>
        <td><%= link_to 'Edit', edit_post_path(post.id) %></td>
        <td><%= link_to 'Destroy', post_path(post.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>



<br>

<%= link_to 'New Post', new_post_path(current_user) %>
