<%= render "layouts/navbar" %>

<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>
<br>
<br>

<%= link_to 'New Post', new_post_path(current_user) %>
<br>
<br>
<br>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Location</th>
      <th>Picture</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>

        <td><%= post.name %></td>
        <td><%= post.description %></td>
        <td><%= post.location %></td>
        <td><%= post.picture %></td>
        <td><a href="/users/<%= post.user_id %>"><%= post.user_id %></a></td>
        <td><%= link_to 'Show', post_path(post.id) %></td>
        <%- if current_user.id === post.user_id %>
          <td><%= link_to 'Edit', edit_post_path(post.id) %></td>
          <td><%= link_to 'Destroy', post_path(post.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>



<br>

